<?xml version="1.0" encoding="utf-8"?>
<log4net debug="true">
  <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
    <file type="log4net.Util.PatternString" value="%property{BaseLogDir}\log\ezxaccountriskgui.log" />
    <appendToFile value="true" />
    <rollingStyle value="Composite" />
    <maxSizeRollBackups value="10" />
    <maximumFileSize value="10MB" />
    <datePattern value="yyyyMMdd" />
    <staticLogFileName value="true" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %-5level %logger [%property{BuildNumber}] [%property{User}] [%property{AppName}] - %message%newline" />
    </layout>
    <threshold value="DEBUG" />
  </appender>
  <appender name="RemoteSyslogAppender" type="log4net.Appender.RemoteSyslogAppender">
    <facility value="Local6" />
    <identity value="EZOMS[%thread][%property{log4net:HostName}]" />
    <layout type="log4net.Layout.PatternLayout" value="[%thread] %-5level %logger [%property{BuildNumber}] [%property{User}] [%property{AppName}] - %message" />
    <remoteAddress value="eval.ezxinc.com" />
    <threshold value="WARN" />
  </appender>
  <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
    </layout>
    <threshold value="WARN" />
  </appender>
  <appender name="AsyncAppender" type="EZXLib.AsyncAppender">
    <appender-ref ref="RollingFileAppender" />
    <appender-ref ref="RemoteSyslogAppender" />
    <appender-ref ref="ConsoleAppender" />
  </appender>
  <!-- Setup the root category, add the appenders and set the default level -->
  <root>
    <level value="ALL" />
    <appender-ref ref="AsyncAppender" />
  </root>
</log4net>