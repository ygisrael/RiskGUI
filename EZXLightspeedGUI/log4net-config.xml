<?xml version="1.0" encoding="utf-8"?>
<log4net debug="false">
  <appender name="file" type="log4net.Appender.RollingFileAppender">
    <!--
		<file type="log4net.Util.PatternString" value="%property{BaseLogDir}\log\ezoms.log" />
	-->
    <file type="log4net.Util.PatternString" value="logs\account-risk-gui.log" />
    <appendToFile value="true" />
    <rollingStyle value="Composite" />
    <maxSizeRollBackups value="5" />
    <maximumFileSize value="20MB" />
    <datePattern value="yyyyMMdd" />
    <staticLogFileName value="true" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %-5level %logger{1} - %message%newline" />
    </layout>
  </appender>
  <appender name="RemoteSyslogAppender" type="log4net.Appender.RemoteSyslogAppender">
    <facility value="Local6" />
    <identity value="EZXAccountRiskGUI[%level][%property{log4net:HostName}]" />
    <layout type="log4net.Layout.PatternLayout" value="[%thread] %-5level %logger [%property{BuildNumber}] [%property{User}] [%property{AppName}] - %message" />
    <remoteAddress value="" />
    <threshold value="debug" />
  </appender>
  <!-- Setup the root category, add the appenders and set the default level -->
  <root>
    <level value="info" />
    <appender-ref ref="file" />
  </root>
</log4net>