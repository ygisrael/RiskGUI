<UserControl x:Class="EZXLightspeedGUI.View.MainMenuUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Menu Background="{StaticResource {x:Static SystemColors.MenuBrushKey}}"
              Grid.Column="0">
            <MenuItem Header="_File">
                <MenuItem Header="Import Buying Power" Click="ImportBuyingPower_Click"
                          IsEnabled="{Binding Source={StaticResource AppManager}, Path=GUILSEngine.LoggedIn}"/>
                <MenuItem Header="Save Display-Order" Click="SaveGroupAccountOrder_Click"
                          IsEnabled="{Binding Source={StaticResource AppManager}, Path=GUILSEngine.LoggedIn}"/>
                <MenuItem Header="Reset Display-Order" Click="ResetGroupAccountOrder_Click"
                          IsEnabled="{Binding Source={StaticResource AppManager}, Path=GUILSEngine.LoggedIn}"
                          Visibility="{Binding Source={StaticResource AppManager}, Path=GUILSEngine.DataManager.IsAlphabetize, Converter={StaticResource InvertBooleanToVisibilityConverter}}"/>
                <MenuItem x:Name="RefreshMenuItem" Header="Refresh Data" Click="RefreshGroupAccount_Click" 
                          IsEnabled="{Binding Path=GUILSEngine.LoggedIn, Source={StaticResource AppManager}}"/>
                <MenuItem x:Name="LoginMenuItem" Header="Login" Click="Login_Click" 
                          IsEnabled="{Binding Path=GUILSEngine.LoggedIn, Source={StaticResource AppManager}, Converter={StaticResource InverseBoolConverter}}"/>
                <MenuItem x:Name="LogoutMenuItem" Header="Logout" Click="Logout_Click" 
                          IsEnabled="{Binding Path=GUILSEngine.LoggedIn, Source={StaticResource AppManager}}"/>
                <MenuItem x:Name="ExitMenuItem" Header="Exit" Click="Exit_Click" />
            </MenuItem>
            <MenuItem Header="_Edit" 
                      IsEnabled="{Binding Source={StaticResource AppManager}, Path=GUILSEngine.LoggedIn}">
                <MenuItem Header="Create Group" Click="CreateGroupMenuItem_Click"/>
                <MenuItem Header="Create Account" Click="CreateAccountMenuItem_Click"/>
                <Separator/>
                <MenuItem Header="{Binding Source={StaticResource AppManager}, Path=GUILSEngine.DataManager.IsPriceCheckON, Converter={StaticResource PriceCheckToHeaderValueConverter}}" Click="EnableDisablePriceCheckMenuItem_Click"
                          IsEnabled="{Binding Source={StaticResource AppManager}, Path=GUILSEngine.DataManager.IsPriceCheckSpecified}"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="Alphabetize" 
                          x:Name="chkAlphabetize" 
                          IsCheckable="True"
                          IsChecked="{Binding Source={StaticResource AppManager}, Path=GUILSEngine.DataManager.IsAlphabetize}"
                          Checked="AlphabetizeMenuItem_Checked"/>
                <Separator/>
                <MenuItem Header="View Change History" Click="ChangeHistoryMenuItem_Click"/>
                <MenuItem Header="View Violation Log" Click="ViolationLogMenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="_About" Click="AbountMenuItem_Click"/>
        </Menu>
        <Menu Grid.Column="1" BorderThickness="1" BorderBrush="Blue" Visibility="{Binding Source={StaticResource AppManager}, Path=GUILSEngine.IsAccountSettingON, Converter={StaticResource BooleanToVisibilityConverter}}">
            <MenuItem x:Name="AccountSettingONMenuItem" Header="Account Setting ON" IsEnabled="False"  
                      Background="Red" Foreground="LightGoldenrodYellow" 
                      FontWeight="ExtraBold" FontSize="12"  HorizontalAlignment="Right" />
        </Menu>
    </Grid>
</UserControl>
