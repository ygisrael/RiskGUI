<Window x:Class="EZXLightspeedGUI.View.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Icon="/EZXAccountRiskGUI;component/Images/App.ico"
        xmlns:prop="clr-namespace:EZXLightspeedGUI.Properties"       
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="{x:Static prop:Resources.AboutWindowTitle}" 
        Height="300" Width="285" 
        PreviewKeyDown="Window_PreviewKeyDown">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </Window.Resources>
    <Grid Background="WhiteSmoke">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Image Source="/EZXAccountRiskGUI;component/Images/login.jpg" Grid.Row="0"/>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,20,0,0">
            <TextBlock x:Name="Version" HorizontalAlignment="Center" FontSize="14"/>
            <TextBlock x:Name="VersionDate" HorizontalAlignment="Center" FontSize="14"/>
            <TextBlock x:Name="CopyrightText1" Text="{x:Static prop:Resources.CopyrightText1}" FontStyle="Italic" HorizontalAlignment="Center" Margin="0,20,0,0"/>
            <TextBlock x:Name="CopyrightText2" Text="{x:Static prop:Resources.CopyrightText2}" FontStyle="Italic" HorizontalAlignment="Center"/>
            <Button x:Name="OKButton" Content="{x:Static prop:Resources.AboutOKButton}" Click="OKButton_Click" Margin="25,20,25,0"/>
        </StackPanel>
    </Grid>

</Window>

    
    