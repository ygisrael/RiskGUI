<Window x:Class="EZXLightspeedGUI.View.ChangeSetting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change Setting Reason" Height="200" Width="350" WindowStyle="ToolWindow" 
        ResizeMode="NoResize" Loaded="Window_Loaded">
    <Grid>
        <StackPanel>
            <TextBlock Margin="2" Text="Reason(s) to change setting(s):" Height="20" />
            <TextBox x:Name="TxtReason" Margin="2,0,2,5" BorderThickness="1" BorderBrush="Blue" TextWrapping="Wrap" Height="100"/>
            <Button Content="OK" Width="80" Height="28" FontSize="15" Margin="5" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
    
    
        
    