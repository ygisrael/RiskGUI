<Window x:Class="EZXLightspeedGUI.View.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:my="clr-namespace:EZXLightspeedGUI.View"
        xmlns:vm="clr-namespace:EZXLightspeedGUI.ViewModel"
        Title="{Binding ApplicationTitle}" 
        Height="650" Width="750"         
        WindowState="Normal" WindowStartupLocation="CenterScreen"
        Icon="/EZXAccountRiskGUI;component/Images/App.ico" 
        >
    <Window.DataContext>
        <vm:MainViewVM/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <my:MainMenuUserControl Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" 
                                />
        <my:AccountUserControl Grid.Row="1" Grid.Column="0" 
                               x:Name="groupAccountList"
                               VerticalAlignment="Top"/>
        <GridSplitter Grid.Column="1" Grid.Row="1" Grid.RowSpan="3" Margin="0"
                            ResizeBehavior="PreviousAndNext" 
                            HorizontalAlignment="Stretch" 
                            VerticalAlignment="Stretch"
                            ResizeDirection="Columns"
                            Background="LightBlue"
                            Width="1"  
                            />
        <StackPanel Grid.Column="2" Grid.Row="1" Margin="0"
                    x:Name="groupRiskSetting"
                    Visibility="{Binding Converter={StaticResource NullToVisibilityConverter}, ElementName=groupSettingUserControl, Path=DataContext}">
            <Border Background="{StaticResource NormalBrush}" 
                    BorderThickness="1" BorderBrush="{StaticResource NormalBorderBrush}">
                <TextBlock Padding="10,2,5,2" Text="Risk Control" FontSize="14"  FontWeight="DemiBold"
                       VerticalAlignment="Center" Height="25" Margin="2,2,1,1"/>
            </Border>
            <my:GroupUserControl HorizontalAlignment="Left" Margin="10" 
                             x:Name="groupSettingUserControl" VerticalAlignment="Top" />
        </StackPanel>
        <my:StatusbarUserControl Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" 
                                 />
    </Grid>

</Window>
